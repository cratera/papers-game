{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "web",
      "public": "web-build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "native",
      "public": "dist"
    }
  ],
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
