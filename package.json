{
  "name": "papers-game-web",
  "version": "0.1.0",
  "description": "Papers is the perfect web game for your dinner party. Gather up your friends and have fun!",
  "author": "Sandrina Pereira (development) and Margarida Botelho (design)",
  "license": "ISC",
  "scripts": {
    "start": "node server",
    "prod": "yarn build_client && yarn start",
    "dev": "concurrently \"yarn dev_server\" \"yarn dev_client\"",
    "dev_server": "nodemon --watch server server",
    "dev_client": "cd client && yarn start",
    "build_client": "cd client/ && yarn build",
    "setup": "yarn install && cd client && yarn install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy_heroku": "git add . && git commit -am 'heroku local deploy' && git push heroku master"
  },
  "engines": {
    "node": "12.x"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.4",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-recommended": "^4.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1"
  }
}
